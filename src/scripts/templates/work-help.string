<div class="work_help">
	<header class="work_header">
		<ul>
			<li></li>
			<li>工作帮</li>
			<li action-type="goto-issue">发布</li>
		</ul>
	</header>
	<div class="work_main" spa-widget="scroll" data-scroll-id="work_helpScroll">
		<div>
			<div class="head">
                  <img src="/easy_work/images/arrow.png" width="40" height="40"/>
                  <span>下拉刷新...</span>
            </div>
			<div class="work_con">
				<ul>
					<li action-type="goto-ask">
						<i><img src="/easy_work/img/work_help/wenda.png"/></i>
						<b>问答</b>
					</li>
					<li>
						<i><img src="/easy_work/img/work_help/xinde.png"/></i>
